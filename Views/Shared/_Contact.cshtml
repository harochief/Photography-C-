@model Identity4Example.Models.ContactInfo
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>





@using (Html.BeginForm("Contact", "ContactInfos", null, FormMethod.Post, new { @class = "form-message", role = "form" }))
{
    @Html.AntiForgeryToken()
    
<form id="quote-request" class="form-message" action="form/contact.php" method="post">
    <div class="form-results"></div>
    <div class="form-group row">
        <div class="form-field col-md-6 form-m-bttm">
 

            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Name *" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-field col-md-6">

            
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Email *" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        
         </div>
    </div>
    <div class="form-group row">
        <div class="form-field col-md-6 form-m-bttm">
           
            @Html.EditorFor(model => model.Tell, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Tell *" } })
            @Html.ValidationMessageFor(model => model.Tell, "", new { @class = "text-danger" })
        
         </div>
        <div class="form-field col-md-6">
            
            @Html.EditorFor(model => model.CellPhone, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Cell Phone*" } })
            @Html.ValidationMessageFor(model => model.CellPhone, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="form-field col-md-6 form-m-bttm">
          
            @Html.EditorFor(model => model.ResidentialAddress, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Address*" } })
            @Html.ValidationMessageFor(model => model.ResidentialAddress, "", new { @class = "text-danger" })
        
        </div>
        <div class="form-field col-md-6">

            @Html.EditorFor(model => model.Province, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Province *" } })
            @Html.ValidationMessageFor(model => model.Province, "", new { @class = "text-danger" })
        
        </div>
    </div>
    <div class="form-group row">
        <div class="form-field col-md-6 form-m-bttm">

            @Html.EditorFor(model => model.TypeOfProduct, "Subject", new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Subject*" } })
            @Html.ValidationMessageFor(model => model.TypeOfProduct, "", new { @class = "text-danger" })
        </div>
        <div class="form-field col-md-6">
           
            @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Best time to reach *" } })
            @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
        
        </div>
    </div>
    <div class="form-group row">
        <div class="form-field col-md-12">
   
            @Html.TextAreaFor(model => model.Message, new { @class = "txtarea form-control", rows = '5', placeholder = "Messages / Question *" })
            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
        
         </div>
    </div>
    <input type="text" class="hidden" name="form-anti-honeypot" value="">
    <button type="submit" class="btn solid-btn sb-h">Submit</button>
</form>


  
    
}



