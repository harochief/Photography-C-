                                <br /><br />
                                <p class="more-cta"><a href="@Url.Action("Register", "Account")" class="btn btn-light btn-outline">Join Now</a> <a href="@Url.Action("Contact", "ContactInfos")" class="btn btn-alt">Contact Us</a></p>   
                        </div>
                     }

