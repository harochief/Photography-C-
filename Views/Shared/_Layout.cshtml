            @{
                FamilyContext _db = new FamilyContext();
                int daysleft = 0;
                var addre = from e in _db.Timers

                            select e;
                var address = addre.ToList();
                foreach (var item in address)
                {
                    daysleft = item.Days;
                }


                var file = from e in _db.FileUploaders

                           select e;

